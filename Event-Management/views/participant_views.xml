<odoo>
    <record id="view_participant_form" model="ir.ui.view">
        <field name="name">event.participant.form</field>
        <field name="model">event.participant</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="event_id"/>
                        <field name="feedback"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_participant_tree" model="ir.ui.view">
        <field name="name">event.participant.tree</field>
        <field name="model">event.participant</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="email"/>
                <field name="event_id"/>
            </tree>
        </field>
    </record>
</odoo>